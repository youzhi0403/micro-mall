<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.youzhi.dao.AddressDao">

    <resultMap id="addressResultResultMap" type="com.youzhi.dto.AddressVo" extends="com.youzhi.mapper.AddressMapper.BaseResultMap">
        <result column="account" jdbcType="VARCHAR" property="account" />
        <result column="nickname" jdbcType="VARCHAR" property="nickname"></result>
    </resultMap>


    <select id="list" resultMap="addressResultResultMap">
        select address.*,user.nickname,user.account
        from address
        left join user on user.id = address.user_id
        where
        1 = 1
        <if test="queryParam.account != null">
            and user.account = #{queryParam.account}
        </if>
        order by address.create_time desc
    </select>
</mapper>