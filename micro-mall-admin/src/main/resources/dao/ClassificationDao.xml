<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.youzhi.dao.ClassificationDao">
    <select id="list" resultMap="com.youzhi.mapper.ClassificationMapper.BaseResultMap">
        select *
        from classification
        where
        1 = 1
        <if test="queryParam.keyword != null">
            and name LIKE CONCAT('%',#{queryParam.keyword}, '%')
        </if>
        <if test="queryParam.kind != null">
            and kind = #{queryParam.kind}
        </if>
        order by create_time desc
    </select>

    <select id="getList" resultMap="com.youzhi.mapper.ClassificationMapper.BaseResultMap">
        select id,name
        from classification
        where
        kind = #{kind}
        and level = 0
    </select>
</mapper>